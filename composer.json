{
    "name": "yakamara/redaxo_yrewrite",

    "require-dev": {
        "friendsofphp/php-cs-fixer": "3.3.2",
        "friendsofredaxo/linter": "1.3.0",
        "redaxo/php-cs-fixer-config": "1.0.0",
        "redaxo/psalm-plugin": "1.0.0",
        "redaxo/source": "^5.8",
        "vimeo/psalm": "4.14.0",
        "yakamara/redaxo_yform": "dev-master"
    },

    "autoload": {
        "classmap": [
            "lib/"
        ]
    },

    "scripts": {
        "cs": "php-cs-fixer fix -v --ansi",
        "psalm": "psalm --no-suggestions"
    },

    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
